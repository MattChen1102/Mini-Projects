<h1>Welcome to Matt's Gun heaven!</h1>

<table class="table table-condensed">
    <thead>
      <tr>
        <th>槍名</th>
        <th>槍枝敘述</th>
        <th>槍枝年齡</th>
        <th>新增</th>
        <th>編輯</th>
        <th>刪除</th>
      </tr>
    </thead>
    <tbody>
      <% @guns.each do|gun| %>
	      <tr>
	        <td><%= gun.name%></td>
	        <td><%=gun.description%></td>
	        <td><%=gun.capacity%></td>
	        <td><%= link_to "Add More gun", new_gun_path%></td>
	        <td><%= link_to "Edit Messages", new_gun_path%></td>
	        <td><%= link_to "Kill it", new_gun_path%></td>
	      </tr>
	    <%end%>
    </tbody>
</table>



