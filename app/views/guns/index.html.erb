<h1>Welcome to Matt's Gun heaven!</h1>

<table class="table table-hover">
    <thead>
      <tr>
        <th>槍名</th>
        <th>槍枝射速(發/分鐘)</th>
        <th>槍枝年份</th>
        <th>新增</th>
        <th>編輯</th>
        <th>刪除</th>
      </tr>
    </thead>
    <tbody>
      <% @guns.each do|gun| %>
	      <tr>
	        <td><%= gun.name%></td>
	        <td><%=gun.description%></td>
	        <td><%=gun.capacity%></td>
	        <td><%= link_to "Add More gun", new_gun_path%></td>
	        <td><%= link_to "Edit Messages", edit_gun_path(gun)%></td>
	        <td><%= button_to "Kill Me", gun_path(gun) , :method => :delete,:data => { :confirm => "Are you sure?" }%></td>
	      </tr>
	    <%end%>
    </tbody>
</table>

<%= paginate @guns %>


